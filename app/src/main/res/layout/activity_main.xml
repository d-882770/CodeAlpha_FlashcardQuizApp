<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/questionEditText"
        android:layout_width="385dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:hint="Enter question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/option1EditText"
        android:layout_width="399dp"
        android:layout_height="55dp"
        android:layout_margin="8dp"
        android:hint="Option 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionEditText" />

    <EditText
        android:id="@+id/option2EditText"
        android:layout_width="399dp"
        android:layout_height="63dp"
        android:layout_margin="8dp"
        android:hint="Option 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/option1EditText" />

    <EditText
        android:id="@+id/option3EditText"
        android:layout_width="396dp"
        android:layout_height="59dp"
        android:layout_margin="8dp"
        android:hint="Option 3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/option2EditText" />

    <EditText
        android:id="@+id/option4EditText"
        android:layout_width="399dp"
        android:layout_height="59dp"
        android:layout_margin="8dp"
        android:hint="Option 4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/option3EditText" />

    <EditText
        android:id="@+id/correctOptionIndexEditText"
        android:layout_width="399dp"
        android:layout_height="74dp"
        android:layout_margin="8dp"
        android:hint="Correct Option Index (1-4)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/option4EditText" />

    <Button
        android:id="@+id/addFlashcardButton"
        android:layout_width="379dp"
        android:layout_height="78dp"
        android:layout_margin="16dp"
        android:text="Add Flashcard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/correctOptionIndexEditText" />

    <Button
        android:id="@+id/startQuizButton"
        android:layout_width="257dp"
        android:layout_height="69dp"
        android:layout_margin="16dp"
        android:text="Start Quiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addFlashcardButton" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="377dp"
        android:layout_height="43dp"
        android:layout_margin="16dp"
        android:layout_marginTop="236dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startQuizButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
